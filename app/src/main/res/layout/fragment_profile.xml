<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="126dp"
        android:id="@+id/profile_fragment_imgProfile"
        android:layout_height="126dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="UserNick"
        android:textSize="18sp"
        android:id="@+id/profile_fragment_txtUserNick"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:id="@+id/profile_fragment_txtUserName"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Surname"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/profile_fragment_txtUserSurname"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:id="@+id/profile_fragment_txtUserEmail"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="200dp"
        android:text="Edit Profile"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginTop="50dp"
        android:id="@+id/profile_fragment_btnEditProfile"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"/>

</LinearLayout>