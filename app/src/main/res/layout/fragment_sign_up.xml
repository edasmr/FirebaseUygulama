<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/sig_up_fragment_imgBack"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/sig_up_fragment_imgBack"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Sign Up" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Email"
            android:textSize="16sp"
            android:layout_marginTop="70dp"
            android:inputType="textEmailAddress"
            android:id="@+id/sign_up_fragmnet_editEmail"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="Usernick"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:inputType="textPersonName"
            android:id="@+id/sign_up_fragmnet_editUserNick"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:hint="Name"
                android:layout_weight="1"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:id="@+id/sign_up_fragmnet_editName"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="0dp"
                android:hint="Surname"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:inputType="textPersonName"
                android:id="@+id/sign_up_fragmnet_editSurname"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:hint="Password"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:id="@+id/sign_up_fragmnet_editUserPassword"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="200dp"
            android:text="Sign Up"
            android:textSize="19sp"
            android:textStyle="bold"
            android:id="@+id/sign_up_fragment_btnSignUp"
            android:layout_marginTop="45dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>