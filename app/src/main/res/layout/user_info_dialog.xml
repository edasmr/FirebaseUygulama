<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:padding="15dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="96dp"
        android:id="@+id/user_info_dialog_imgProfile"
        android:layout_height="96dp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Usernick"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/user_info_dialog_editUserNick"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:hint="Name"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:id="@+id/user_info_dialog_editUserName"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="0dp"
            android:hint="Surname"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/user_info_dialog_editUserSurname"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:text="Ok"
        android:layout_marginTop="35dp"
        android:textSize="19sp"
        android:id="@+id/user_info_dialog_btnOk"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"/>

</LinearLayout>